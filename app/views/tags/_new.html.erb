<%= form_for @tag, url: tags_path, method: :post do |f| %>

  
  <div class="form-group">
      <%= f.label   :tag_name , class: "control-label "%>
      <%= f.text_field :name , class: "form-control"  %>

  </div>
  <%=  hidden_field_tag 'product[id]', @product.id %>
  

  <%= f.submit "Add New Tag", class: "btn btn-success" %>

<% end %>
