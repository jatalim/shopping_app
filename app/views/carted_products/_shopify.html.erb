<%= link_to carted_products_path do%>
              <i class = "glyphicon glyphicon-shopping-cart"></i> 
                  <% if !current_public_user.blank? %>
                  <% cartCount = CartedProduct.where(public_user_id: current_public_user.id).count %>

                    <% if cartCount > 0 %>
                      <span class="badge cartBadge"><%= cartCount %></span>
                    <% end %>

                  <% end %>
                <% end %>
