
<div class="row">
  <div class="col-md-4 col-md-offset-4">
       <h1> Create new product </h1>
       
       <%= form_for @product, url:products_path, method: :post do |f| %>

      <div class="form-group">
        <%= f.label   :name , class: "control-label col-sm-2"%>
        <div class="col-sm-8 col-sm-offset-2"><%= f.text_field :name , class: "form-control"  %></div>
      </div>

      <div class="form-group">
        <%= f.label   :description , class: "control-label col-sm-2"%>
        <div class="col-sm-8 col-sm-offset-2"><%= f.text_field :description , class: "form-control"  %></div>
      </div>

      <div class="form-group">
        <%= f.label   :price , class: "control-label col-sm-2"%>
        <div class="col-sm-8 col-sm-offset-2"><%= f.number_field :price , class: "form-control"  %></div>
      </div>

      <div class="form-group">
        <%= f.label   :quantity , class: "control-label col-sm-2"%>
        <div class="col-sm-8 col-sm-offset-2"><%= f.number_field :quantity , class: "form-control"  %></div>
      </div>

      <div class="form-group">
        <%= f.label :image , class: "control-label col-sm-2" %>
       <div class="col-sm-8 col-sm-offset-2"> <%= f.file_field :image , class: "form-control "  %></div>
      </div>


      <div class="buttons">

      <%= link_to 'Back', root_path, class: "btn btn-primary pull-left" %><br>  

      <%= f.submit "Create" , class: "btn btn-success pull-right" %>
        
      </div>

      <% end %>

  </div>
</div>

