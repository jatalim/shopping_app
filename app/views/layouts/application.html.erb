<!DOCTYPE html>
<html>
  <head>
    <title>ShoppingApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>


    <div class="nav navbar navbar-inverse">
        <div class="navbar-brand"> 
          <%= link_to "Home", root_path %> 
         </div>
      
			<ul class="nav navbar-nav navbar-right">
             <li>
                <%= link_to carted_products_path do%>
                  <i class = "glyphicon glyphicon-shopping-cart"></i>

                  <!-- Displaying of cart badge -->
                  <% cartCount = CartedProduct.where(public_user_id: current_public_user.id).count %>
                  <% if cartCount > 0 %>
                    <span class="badge cartBadge"><%= cartCount %></span>
                  <% end %>

                <%end%>
              </li>

            <% if admin_signed_in? %>
            <li><%= link_to "Admin Dashboard", admins_dashboard_path %></li>
              <li><%= link_to "Sign Out", destroy_admin_session_path, method: :delete %></li>  

            <% elsif public_user_signed_in? %>
              <li><%= link_to "Your Account", edit_public_user_registration_path %></li>
              <li><%= link_to "Sign Out", destroy_public_user_session_path, method: :delete %></li>  
        
            <% else %>
        	<li><%= link_to "Join", new_public_user_registration_path %></li>
            <li><%= link_to "Login", new_public_user_session_path %></li>
            </ul>
            <% end %>     

    </div>

      <!-- flash start --> 
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "alert alert-info"%>
     <% end %>
<!-- flash end --> 

<!-- yield start --> 
    	<%= yield %>
<!-- yield end --> 

  </body>
</html>
