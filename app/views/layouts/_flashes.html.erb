<% flash.each do |name, msg| %>
      <%= content_tag :div, class: "alert alert-info show" do%>
        <%= msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span id="closex" aria-hidden="true">&times;</span>
        </button>
      <% end %>

<% end %>
