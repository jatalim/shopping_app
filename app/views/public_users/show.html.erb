<div class="container-fluid">
  <div class="row">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">               

      <div class="panel panel-info" >

        <div class="panel-heading">

            <div class="panel-title1">Your Details</div>
                
        </div>

        

        <div style="padding-top:30px" class="panel-body" >
          
            <div class="row">
              
              <div class="col-md-1 col-xs-1">
              <% if current_public_user.image %>
                <%= image_tag current_public_user.image.url %>  
              <% else %>
                no image
              <% end %>
              </div>

              <div class="col-md-9 col-xs-9 userlabel">
              <% if current_public_user.name %>
                Name: <span class= "username"><%= current_public_user.name %></span><br>
                Email: <span class= "username"><%= current_public_user.email %></span>
                <% else %>
                Email: <span class= "username"><%= current_public_user.email %></span>
                <% end %>
              </div>
              
            </div>

            <div class="row">
              <%= link_to "edit account", edit_public_user_registration_path, class: "btn btn-default btn-xs" %>
            </div>
         
        </div>
      </div>
    </div>
  </div>

  <div class="row"><hr class="hrshow"></div>
</div>

